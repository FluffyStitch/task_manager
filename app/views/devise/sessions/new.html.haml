= render partial: 'header'
.d-flex.justify-content-center.my-5
  .text-center.bg-light.rounded{ style: 'width: 50%;' }
    .bg-primary.rounded-top
      %h2.text-white.py-2 Log in
    .d-flex.justify-content-center
      .text-center{ style: 'width: 80%' }
        = simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
          .form-inputs
            = f.input :email, required: false, autofocus: true, input_html: { autocomplete: "email", style: 'width: 80%' }, wrapper_html: { class: 'd-flex justify-content-end' }, label_html: { class: 'mx-2 my-2' }
            = f.input :password, required: false, input_html: { autocomplete: "current-password", style: 'width: 80%' }, wrapper_html: { class: 'd-flex justify-content-end' }, label_html: { class: 'mx-2 my-2' }
            = f.input :remember_me, as: :boolean if devise_mapping.rememberable?
          .form-actions
            = f.button :submit, "Log in"
        = render "devise/shared/links"

= render partial: 'header'
.d-flex.justify-content-center.my-5
  .text-center.bg-light.rounded{ style: 'width: 50%;' }
    .bg-primary.rounded-top
      %h2.text-white.py-2 Sign up
    .d-flex.justify-content-center
      .text-center{ style: 'width: 90%' }
        = simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
          = f.error_notification
          .form-inputs
            = f.input :email, required: true, autofocus: true, input_html: { autocomplete: "email" }, wrapper_html: { class: 'd-flex justify-content-end' }, label_html: { class: 'mx-1 my-2' }
            = f.input :password, required: true, input_html: { autocomplete: "new-password" }, wrapper_html: { class: 'd-flex justify-content-end' }, label_html: { class: 'mx-1 my-2' }
            = f.input :password_confirmation, required: true, input_html: { autocomplete: "new-password" }, wrapper_html: { class: 'd-flex justify-content-end' }, label_html: { class: 'mx-1 my-2' }
          .form-actions
            = f.button :submit, "Sign up"
        = render "devise/shared/links"
